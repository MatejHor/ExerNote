<div class="mx-1 px-1 my-1 py-1">
  <%= form_tag create_path, method: :post, class: "" do %>
    <div class="form-group border px-3 py-3 my-5 mx-5">
      <div class="row">
        <p class="col-4 text-center mx-2 my-2 py-2"><%= t('name') %></p>
        <input type="text" class="col-7 text-center input-unstyled" name="user[name]" autocomplete="off"/>
      </div>
      <div class="row">
        <p class="col-4 text-center mx-2 my-2 py-2"><%= t('nick') %></p>
        <input type="text" class="col-7 text-center input-unstyled" name="user[nick]" autocomplete="off"/>
      </div>
      <div class="row">
        <p class="col-4 text-center mx-2 my-2 py-2"><%= t('email') %></p>
        <input type="text" class="col-7 text-center input-unstyled" name="user[email]" autocomplete="off"/>
      </div>
      <div class="row">
        <p class="col-4 text-center mx-2 my-2 py-2"><%= t('password') %></p>
        <input type="password" class="col-7 text-center input-unstyled" name="user[password_digest]" autocomplete="off"/>
      </div>
    </div>
    <div class="row  justify-content-center">
      <button type="submit" class="col-5 btn btn-success mx-1"><%= t('register') %></button>
    </div>
  <% end %>
</div>
