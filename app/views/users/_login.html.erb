<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Prihlasenie</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_tag login_path, method: :get, class: "" do %>
        <div class="modal-body">
          <div class="form-group border px-1 py-1">
            <div class="form-group row">
              <p class="col-4 text-center mx-2 my-2">Email</p>
              <input class="form-control text-center col-7 input-unstyled" name="user[email]" type="text" autocomplete="off">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-12 text-center">
              Nemas ucet? nevadi <a href="/register">registruj sa!</a>
            </label>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Zavrieť</button>
          <button type="submit" class="btn btn-primary f">Prihlásiť sa</button>
        </div>
      <% end %>
    </div>
  </div>
</div>