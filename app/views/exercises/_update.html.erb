<div class="modal fade" id="updateModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Vloženie cviku</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_tag exercise_path, method: :put, class: "" do %>
        <div class="modal-body">
          <input value="<%= @exercise.id %>" name="id" type="hidden"/>
          <input type="hidden" value="<%=  @exercise.user_id ? @exercise.user_id : 0 %>" name="exercise[user_id]"/>
          <div class="form-group border px-1 py-1">
            <div class="form-group row">
              <p class="col-4 text-center mx-2 my-2">Názov</p>
              <input class="form-control text-center col-7 input-unstyled" name="exercise[title]" type="text" value="<%= @exercise.title %>" autocomplete="off">
            </div>
            <div class="form-group row">
              <p class="col-4 text-center mx-2 my-2">Čas</p>
              <input class="form-control text-center col-7 input-unstyled" name="exercise[time]" type="text" value="<%= @exercise.time %>" autocomplete="off">
            </div>
            <div class="form-group row">
              <p class="col-4 text-center mx-2 my-2">Dátum</p>
              <input class="form-control text-center col-7 input-unstyled" name="exercise[created_at]" type="text" value="<%= @exercise.created_at %>" autocomplete="off">
            </div>
            <% if @exercise.distance %>
              <div class="form-group row">
                <p class="col-4 text-center mx-2 my-2">Vzdialenosť</p>
                <input class="form-control text-center col-7 input-unstyled" name="exercise[distance]" type="text" value="<%= @exercise.distance %>" autocomplete="off">
              </div>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Zavrieť</button>
          <button type="submit" class="btn btn-primary f">Pridať</button>
        </div>
      <% end %>
    </div>
  </div>
</div>