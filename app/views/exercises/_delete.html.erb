<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= form_tag exercise_path { @exercise }, method: :delete, class: "" do %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Vymazať cvičenie</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Naozaj vymazať toto cvicečenie?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvoriť</button>
          <button type="submit" class="btn btn-danger">Naozaj vymazať</button>
        </div>
      </div>
    <% end %>
  </div>
</div>