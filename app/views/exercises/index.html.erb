<div class="content-container">
  <div class="card border-0">
    <% @exercises_day.each do |exercises| %>
      <div class="card-body">
        <h5 class="card-title border-bottom"><%= exercises[0].created_at.strftime("%d.%m.%Y") %></h5>
        <% exercises.each do |exercise| %>
          <a class="link-unstyled" href="<%= exercise_path(exercise) %>">
            <div class="row">
              <p class="col-8 text-left"><%= exercise.title %></p>
              <p class="col-4 text-right">Cas: <%= exercise.time %> min</p>
            </div>
          </a>
        <% end %>
      </div>
    <% end %>

    <% if @exercises_day.empty? %>
      <div class="alert alert-info text-center"><%= t('none') %></div>
    <% end %>

    <div class="apple_pagination">
      <%= will_paginate @exercises, :container => false, :previous_label => I18n.t('previous'), :next_label => I18n.t('next') %>
    </div>
  </div>

</div>


